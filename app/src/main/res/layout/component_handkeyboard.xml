<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:measureWithLargestChild="false"
        android:baselineAligned="false"
        android:background="#cccccc"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Add Open Melds"
            android:id="@+id/openMeldsCheckbox"
            android:checked="false"
            android:textSize="18dp"
            android:paddingRight="5dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chii"
            android:id="@+id/openChii"
            android:onClick="setOpenChii"
            android:enabled="false"
            android:backgroundTint="#f6f6f6"
            android:layout_weight="1"
            android:visibility="invisible" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pon"
            android:id="@+id/openPon"
            android:onClick="setOpenPon"
            android:enabled="false"
            android:backgroundTint="#f6f6f6"
            android:layout_weight="1"
            android:visibility="invisible" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kan"
            android:id="@+id/openKan"
            android:onClick="setOpenKan"
            android:enabled="false"
            android:backgroundTint="#f6f6f6"
            android:layout_weight="1"
            android:visibility="invisible" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/smallTilesModeContainer"
        android:background="#eeeeee">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:measureWithLargestChild="false"
            android:baselineAligned="false"
            android:id="@+id/firstButtonContainer"
            android:layout_marginTop="5dp">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:measureWithLargestChild="false"
            android:baselineAligned="false"
            android:id="@+id/secondButtonContainer">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:measureWithLargestChild="false"
            android:baselineAligned="false"
            android:id="@+id/thirdButtonContainer" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:measureWithLargestChild="false"
            android:baselineAligned="false"
            android:id="@+id/fourthButtonContainer"
            android:layout_marginBottom="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/largeTilesModeContainer" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:measureWithLargestChild="false"
            android:baselineAligned="false"
            android:background="#cccccc"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manzu"
                android:id="@+id/manzuButton"
                android:onClick="setManzuSuit"
                android:enabled="true"
                android:backgroundTint="#f6f6f6"
                android:layout_weight="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pinzu"
                android:id="@+id/pinzuButton"
                android:onClick="setPinzuSuit"
                android:enabled="true"
                android:backgroundTint="#f6f6f6"
                android:layout_weight="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Souzu"
                android:id="@+id/souzuButton"
                android:onClick="setSouzuSuit"
                android:enabled="true"
                android:backgroundTint="#f6f6f6"
                android:layout_weight="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Honors"
                android:id="@+id/honorsButton"
                android:onClick="setHonorsSuit"
                android:enabled="true"
                android:backgroundTint="#f6f6f6"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:measureWithLargestChild="false"
                android:baselineAligned="false"
                android:background="#eeeeee"
                android:paddingTop="5dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/placeholderButton1"
                    android:enabled="true"
                    android:backgroundTint="#d6d7d7"
                    android:textSize="20sp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    style="?android:attr/buttonStyleSmall" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:id="@+id/placeholderButton2"
                    android:enabled="true"
                    android:backgroundTint="#d6d7d7"
                    android:textSize="20sp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    style="?android:attr/buttonStyleSmall" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/placeholderButton3"
                    android:enabled="true"
                    android:backgroundTint="#d6d7d7"
                    android:textSize="20sp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    style="?android:attr/buttonStyleSmall" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:id="@+id/placeholderButton4"
                    android:enabled="true"
                    android:backgroundTint="#d6d7d7"
                    android:textSize="20sp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    style="?android:attr/buttonStyleSmall" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:id="@+id/placeholderButton5"
                    android:enabled="true"
                    android:backgroundTint="#d6d7d7"
                    android:textSize="20sp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    style="?android:attr/buttonStyleSmall" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:measureWithLargestChild="false"
                android:baselineAligned="false"
                android:background="#eeeeee"
                android:paddingBottom="5dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:id="@+id/placeholderButton6"
                    android:enabled="true"
                    android:backgroundTint="#d6d7d7"
                    android:textSize="20sp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    style="?android:attr/buttonStyleSmall" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:id="@+id/placeholderButton7"
                    android:enabled="true"
                    android:backgroundTint="#d6d7d7"
                    android:textSize="20sp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    style="?android:attr/buttonStyleSmall" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:id="@+id/placeholderButton8"
                    android:enabled="true"
                    android:backgroundTint="#d6d7d7"
                    android:textSize="20sp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    style="?android:attr/buttonStyleSmall" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:id="@+id/placeholderButton9"
                    android:enabled="true"
                    android:backgroundTint="#d6d7d7"
                    android:textSize="20sp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    style="?android:attr/buttonStyleSmall" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>