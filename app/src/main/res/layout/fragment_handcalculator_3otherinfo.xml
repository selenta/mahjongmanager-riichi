<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollIndicators="right"
    android:id="@+id/step2Container"
    tools:context=".HanFuCalculatorFragment"
    android:nestedScrollingEnabled="false"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hand Calculator"
        android:id="@+id/textView4"
        android:textSize="44dp"
        android:textStyle="italic"
        android:textAlignment="center" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Step 3: Input situational info"
        android:id="@+id/subTitle"
        android:textSize="24dp"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Dora"
            android:id="@+id/textView17"
            android:textSize="20dp"
            android:textAlignment="center"
            android:gravity="center" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/doraCount"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="35dp">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Double Riichi"
                android:id="@+id/doubleRiichiCheckBox"
                android:textSize="18dp"
                android:onClick="setTsumo"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riichi"
                android:id="@+id/riichiCheckBox"
                android:textSize="18dp"
                android:onClick="setRiichi" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ippatsu"
                android:id="@+id/ippatsuCheckBox"
                android:textSize="18dp"
                android:onClick="setIppatsu"
                android:enabled="false" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rinshan"
                android:id="@+id/rinshanCheckBox"
                android:textSize="18dp"
                android:onClick="setRinshan" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chan Kan"
                android:id="@+id/chanKanCheckBox"
                android:textSize="18dp"
                android:onClick="setChanKan" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Haitei/Houtei"
                android:id="@+id/haiteiHouteiCheckBox"
                android:textSize="18dp"
                android:onClick="setHaiteiHoutei" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="top|center_horizontal"
            android:id="@+id/prevailingWindOptions"
            android:layout_marginLeft="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Prevailing Wind"
                android:id="@+id/textView9" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="East"
                android:id="@+id/roundEastWind"
                android:layout_marginLeft="15dp"
                android:textSize="18dp"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="South"
                android:id="@+id/roundSouthWind"
                android:layout_marginLeft="15dp"
                android:textSize="18dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="West"
                android:id="@+id/roundWestWind"
                android:layout_marginLeft="15dp"
                android:textSize="18dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="North"
                android:id="@+id/roundNorthWind"
                android:layout_marginLeft="15dp"
                android:textSize="18dp" />
        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="top|center_horizontal"
            android:id="@+id/playerWindOptions"
            android:layout_marginLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Player Wind"
                android:id="@+id/textView10" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="East"
                android:id="@+id/playerEastWind"
                android:layout_marginLeft="15dp"
                android:textSize="18dp"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="South"
                android:id="@+id/playerSouthWind"
                android:layout_marginLeft="15dp"
                android:textSize="18dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="West"
                android:id="@+id/playerWestWind"
                android:layout_marginLeft="15dp"
                android:textSize="18dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="North"
                android:id="@+id/playerNorthWind"
                android:layout_marginLeft="15dp"
                android:textSize="18dp" />
        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/backToMainMenuButton"
            android:layout_gravity="center"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:onClick="backToMainMenu"
            android:layout_marginLeft="15dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/nextButton"
            android:layout_gravity="center_vertical|right"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:onClick="goToHandCalculatorScoreScreen"
            android:layout_marginRight="15dp"
            android:enabled="true" />
    </LinearLayout>


</LinearLayout>