<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollIndicators="right"
    android:id="@+id/fragment_hanfucalculator"
    tools:context=".simplefragments.HanFuCalculatorFragment"
    android:nestedScrollingEnabled="false">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hand Calculator"
        android:id="@+id/title"
        android:textSize="44dp"
        android:textStyle="italic"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/step1Contianer">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Step 1: Enter each tile in the hand"
            android:id="@+id/subTitle"
            android:textSize="24dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="[Warning Message]"
            android:id="@+id/errorMessageLabel"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:textColor="#ff0000" />

        <com.mahjongmanager.riichi.HandDisplay
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="[...]"
                android:id="@+id/displayedHand"
                android:layout_gravity="center"
                android:textAlignment="center" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Drag tile upwards to delete"
            android:id="@+id/textView6"
            android:textSize="18dp"
            android:textAlignment="center"
            android:textStyle="italic" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Drag tile in a set downwards to indicate open"
            android:id="@+id/textView7"
            android:textSize="18dp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:measureWithLargestChild="false"
            android:baselineAligned="false"
            android:background="#cccccc"
            android:padding="10dp">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manzu"
                android:id="@+id/manzuButton"
                android:onClick="setManzuSuit"
                android:enabled="true"
                android:backgroundTint="#f6f6f6"
                android:layout_weight="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pinzu"
                android:id="@+id/pinzuButton"
                android:onClick="setPinzuSuit"
                android:enabled="true"
                android:backgroundTint="#f6f6f6"
                android:layout_weight="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Souzu"
                android:id="@+id/souzuButton"
                android:onClick="setSouzuSuit"
                android:enabled="true"
                android:backgroundTint="#f6f6f6"
                android:layout_weight="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Honors"
                android:id="@+id/honorsButton"
                android:onClick="setHonorsSuit"
                android:nestedScrollingEnabled="false"
                android:enabled="true"
                android:elegantTextHeight="false"
                android:backgroundTint="#f6f6f6"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:measureWithLargestChild="false"
                android:baselineAligned="false"
                android:background="#eeeeee"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:layout_weight="1"
                android:id="@+id/topButtonContainer">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:text="1"
                    android:id="@+id/placeholderButton1"
                    android:onClick="setManzuSuit"
                    android:enabled="true"
                    android:backgroundTint="#d6d7d7"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:text="2"
                    android:id="@+id/placeholderButton2"
                    android:onClick="setSouzuSuit"
                    android:enabled="true"
                    android:backgroundTint="#d6d7d7"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:text="3"
                    android:id="@+id/placeholderButton3"
                    android:onClick="setPinzuSuit"
                    android:enabled="true"
                    android:backgroundTint="#d6d7d7"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:text="4"
                    android:id="@+id/placeholderButton4"
                    android:onClick="setHonorsSuit"
                    android:nestedScrollingEnabled="false"
                    android:enabled="true"
                    android:elegantTextHeight="false"
                    android:backgroundTint="#d6d7d7"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:text="5"
                    android:id="@+id/placeholderButton5"
                    android:onClick="setManzuSuit"
                    android:enabled="true"
                    android:backgroundTint="#d6d7d7"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:measureWithLargestChild="false"
                android:baselineAligned="false"
                android:background="#eeeeee"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:id="@+id/bottomButtonContainer">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:text="6"
                    android:id="@+id/placeholderButton6"
                    android:onClick="setManzuSuit"
                    android:enabled="true"
                    android:backgroundTint="#d6d7d7"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:text="7"
                    android:id="@+id/placeholderButton7"
                    android:onClick="setSouzuSuit"
                    android:enabled="true"
                    android:backgroundTint="#d6d7d7"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:text="8"
                    android:id="@+id/placeholderButton8"
                    android:onClick="setPinzuSuit"
                    android:enabled="true"
                    android:backgroundTint="#d6d7d7"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:text="9"
                    android:id="@+id/placeholderButton9"
                    android:onClick="setHonorsSuit"
                    android:nestedScrollingEnabled="false"
                    android:enabled="true"
                    android:elegantTextHeight="false"
                    android:backgroundTint="#d6d7d7"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/backToMainMenuButton"
            android:layout_gravity="center"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:onClick="backToMainMenu"
            android:layout_marginLeft="15dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:id="@+id/clearHandButton"
            android:layout_gravity="center"
            android:paddingEnd="15dp"
            android:paddingStart="15dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_weight="1" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/nextButton"
            android:layout_gravity="center_vertical|right"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:onClick="gotoHandCalculatorWinningTile"
            android:layout_marginRight="15dp"
            android:enabled="false" />
    </LinearLayout>

</LinearLayout>